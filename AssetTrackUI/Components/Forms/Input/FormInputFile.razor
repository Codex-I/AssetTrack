@using System.Linq.Expressions
@* @inherits InputFile *@

<div class="row my-3">
    <label class="form-label col-@Column">@Label</label>
    <div class="col-@(12 - Column)">
        <InputFile class="form-control" accept="@Accept" OnChange="@OnChange"></InputFile>
    </div>
</div>

@code {
    [Parameter] public string? Label { get; set; }
    [Parameter] public int? Column { get; set; } = 4;
    [Parameter] public string? Accept { get; set; } = ".jpg,.jpeg,.png";

    [Parameter] public EventCallback<InputFileChangeEventArgs> OnChange { get; set; }

    [Parameter] public Expression<Func<string>>? For { get; set; }
}